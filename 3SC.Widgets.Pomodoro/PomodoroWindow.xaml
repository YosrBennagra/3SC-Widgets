<local:WidgetWindowBase x:Class="ThreeSC.Widgets.Pomodoro.PomodoroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ThreeSC.Widgets.Pomodoro"
        Title="Pomodoro+ Timer"
        Width="320"
        Height="420"
        Background="Transparent">

    <Window.Resources>
        <!-- Tree colors for different growth stages -->
        <SolidColorBrush x:Key="SeedBrush" Color="#8B4513"/>
        <SolidColorBrush x:Key="SaplingBrush" Color="#A0522D"/>
        <SolidColorBrush x:Key="TreeBrush" Color="#228B22"/>
        <SolidColorBrush x:Key="MatureTreeBrush" Color="#006400"/>
        <SolidColorBrush x:Key="DeadTreeBrush" Color="#654321"/>

        <!-- Converters -->
        <local:TreeStageToVisibilityConverter x:Key="TreeStageToVisibilityConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Border Background="#2C2C2E" CornerRadius="16" BorderThickness="2">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4CAF50" Offset="0"/>
                <GradientStop Color="#2E7D32" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="{Binding SessionTypeText}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding TimerDisplay}" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="#4CAF50"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Tree Visualization -->
            <Grid Grid.Row="1" Margin="0,10">
                <Viewbox Stretch="Uniform">
                    <Canvas Width="200" Height="200" Opacity="{Binding TreeOpacity}">
                        <!-- Pot/Ground -->
                        <Rectangle Canvas.Left="60" Canvas.Top="160" 
                                   Width="80" Height="40" 
                                   Fill="#8B4513" 
                                   RadiusX="5" RadiusY="5"/>

                        <!-- Seed (Stage 0) -->
                        <Ellipse Canvas.Left="95" Canvas.Top="175" 
                                 Width="10" Height="10" 
                                 Fill="{StaticResource SeedBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=0}"/>

                        <!-- Sprout (Stage 1-2) -->
                        <Path Data="M 100,170 L 100,150" 
                              Stroke="{StaticResource SaplingBrush}" 
                              StrokeThickness="2"
                              Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=1-2}"/>
                        <Ellipse Canvas.Left="97" Canvas.Top="145" 
                                 Width="6" Height="6" 
                                 Fill="{StaticResource TreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=1-2}"/>

                        <!-- Small Tree (Stage 3-4) -->
                        <Path Data="M 100,165 L 100,120" 
                              Stroke="#654321" 
                              StrokeThickness="4"
                              Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=3-4}"/>
                        <Ellipse Canvas.Left="85" Canvas.Top="105" 
                                 Width="30" Height="30" 
                                 Fill="{StaticResource TreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=3-4}"/>

                        <!-- Medium Tree (Stage 5-6) -->
                        <Path Data="M 100,165 L 100,100 M 100,130 L 80,120 M 100,130 L 120,120" 
                              Stroke="#654321" 
                              StrokeThickness="6"
                              Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=5-6}"/>
                        <Ellipse Canvas.Left="75" Canvas.Top="85" 
                                 Width="50" Height="50" 
                                 Fill="{StaticResource TreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=5-6}"/>
                        <Ellipse Canvas.Left="60" Canvas.Top="110" 
                                 Width="30" Height="30" 
                                 Fill="{StaticResource TreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=5-6}"/>
                        <Ellipse Canvas.Left="110" Canvas.Top="110" 
                                 Width="30" Height="30" 
                                 Fill="{StaticResource TreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=5-6}"/>

                        <!-- Large Tree (Stage 7-8) -->
                        <Path Data="M 100,165 L 100,80 M 100,120 L 70,100 M 100,120 L 130,100 M 100,100 L 75,85 M 100,100 L 125,85" 
                              Stroke="#654321" 
                              StrokeThickness="8"
                              Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=7-8}"/>
                        <Ellipse Canvas.Left="65" Canvas.Top="60" 
                                 Width="70" Height="70" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=7-8}"/>
                        <Ellipse Canvas.Left="50" Canvas.Top="85" 
                                 Width="40" Height="40" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=7-8}"/>
                        <Ellipse Canvas.Left="110" Canvas.Top="85" 
                                 Width="40" Height="40" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=7-8}"/>

                        <!-- Full Mature Tree (Stage 9-10) -->
                        <Path Data="M 100,165 L 100,60 M 100,130 L 65,110 M 100,130 L 135,110 M 100,110 L 70,90 M 100,110 L 130,90 M 100,90 L 80,75 M 100,90 L 120,75" 
                              Stroke="#654321" 
                              StrokeThickness="10"
                              Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=9-10}"/>
                        <Ellipse Canvas.Left="55" Canvas.Top="45" 
                                 Width="90" Height="90" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=9-10}"/>
                        <Ellipse Canvas.Left="40" Canvas.Top="70" 
                                 Width="50" Height="50" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=9-10}"/>
                        <Ellipse Canvas.Left="110" Canvas.Top="70" 
                                 Width="50" Height="50" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=9-10}"/>
                        <Ellipse Canvas.Left="65" Canvas.Top="30" 
                                 Width="70" Height="70" 
                                 Fill="{StaticResource MatureTreeBrush}"
                                 Visibility="{Binding TreeGrowthStage, Converter={StaticResource TreeStageToVisibilityConverter}, ConverterParameter=9-10}"/>

                        <!-- Dead overlay -->
                        <Rectangle Canvas.Left="0" Canvas.Top="0" 
                                   Width="200" Height="200" 
                                   Fill="#654321" 
                                   Opacity="0.5"
                                   Visibility="{Binding TreeIsDead, Converter={StaticResource BoolToColorConverter}}"/>
                    </Canvas>
                </Viewbox>

                <!-- Progress ring around tree -->
                <Viewbox Stretch="Uniform" Margin="10">
                    <Canvas Width="220" Height="220">
                        <Ellipse Width="220" Height="220" 
                                 Stroke="#444" 
                                 StrokeThickness="4" 
                                 Fill="Transparent"/>
                        <Path Stroke="#4CAF50" 
                              StrokeThickness="4" 
                              Fill="Transparent">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="110,10">
                                        <ArcSegment Size="100,100" 
                                                    Point="110,10" 
                                                    SweepDirection="Clockwise"
                                                    IsLargeArc="{Binding ProgressPercentage, Converter={StaticResource BoolToColorConverter}}"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </Viewbox>
            </Grid>

            <!-- Statistics -->
            <Grid Grid.Row="2" Margin="0,15,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒ³" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalTreesPlanted}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Trees" 
                               FontSize="10" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="â±ï¸" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalHoursFocused, StringFormat={}{0:F1}h}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF9800"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Focused" 
                               FontSize="10" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”¥" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentStreak}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF5722"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Streak" 
                               FontSize="10" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Control Buttons -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="â–¶ï¸" 
                        Command="{Binding StartTimerCommand}"
                        Background="#4CAF50" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,10"
                        Margin="0,0,5,0"
                        FontSize="18"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66BB6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" 
                        Content="â¸ï¸" 
                        Command="{Binding PauseTimerCommand}"
                        Background="#FF9800" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,10"
                        Margin="5,0"
                        FontSize="18"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFA726"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" 
                        Content="â¹ï¸" 
                        Command="{Binding StopTimerCommand}"
                        Background="#F44336" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,10"
                        Margin="5,0,0,0"
                        FontSize="18"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EF5350"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Toggle Session Type -->
            <Button Grid.Row="4" 
                    Content="Switch Mode" 
                    Command="{Binding ToggleSessionTypeCommand}"
                    Background="#607D8B" 
                    Foreground="White"
                    BorderThickness="0"
                    Padding="0,8"
                    Margin="0,10,0,0"
                    FontSize="12"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#78909C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</local:WidgetWindowBase>
