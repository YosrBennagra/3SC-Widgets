<local:WidgetWindowBase
    x:Class="_3SC.Widgets.DesktopPet.DesktopPetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:_3SC.Widgets.DesktopPet"
    xmlns:helpers="clr-namespace:_3SC.Widgets.DesktopPet.Helpers"
    mc:Ignorable="d"
    Title="DesktopPet"
    Width="180"
    Height="180"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Topmost="False">

    <local:WidgetWindowBase.Resources>
        <!-- Pet Colors -->
        <SolidColorBrush x:Key="PetEyeWhite"
                Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="PetPupil"
                Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="PetCheeks"
                Color="#60FFB6C1"/>

        <!-- UI Colors -->
        <SolidColorBrush x:Key="MenuBackground"
                Color="#FF16161F"/>
        <SolidColorBrush x:Key="MenuBorder"
                Color="#FF2A2A3A"/>
        <SolidColorBrush x:Key="TextPrimary"
                Color="#FFF1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary"
                Color="#FF94A3B8"/>

        <!-- Stat Bar Colors -->
        <SolidColorBrush x:Key="HappinessBar"
                Color="#FFFFD700"/>
        <SolidColorBrush x:Key="EnergyBar"
                Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="HungerBar"
                Color="#FFFF9800"/>

        <!-- Context Menu Style -->
        <Style x:Key="PetContextMenuStyle"
                TargetType="ContextMenu">
            <Setter Property="Background"
                    Value="{StaticResource MenuBackground}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource MenuBorder}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding"
                    Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                        BlurRadius="16"
                                        ShadowDepth="4"
                                        Opacity="0.5"/>
                            </Border.Effect>
                            <StackPanel IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PetMenuItemStyle"
                TargetType="MenuItem">
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0"
                                        Content="{TemplateBinding Icon}"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1"
                                        ContentSource="Header"
                                        VerticalAlignment="Center"/>
                                <Path x:Name="Arrow"
                                        Grid.Column="2"
                                        Data="M 0 0 L 4 4 L 0 8 Z"
                                        Fill="{StaticResource TextSecondary}"
                                      VerticalAlignment="Center"
                                        Margin="8,0,0,0"
                                      Visibility="{Binding HasItems, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static helpers:BooleanToVisibilityConverter.Instance}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted"
                                    Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuSeparatorStyle"
                TargetType="Separator">
            <Setter Property="Height"
                    Value="1"/>
            <Setter Property="Margin"
                    Value="8,4"/>
            <Setter Property="Background"
                    Value="{StaticResource MenuBorder}"/>
        </Style>
    </local:WidgetWindowBase.Resources>

    <!-- Main Content - Extra space for particles -->
    <Grid x:Name="MainGrid"
          MouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
          MouseMove="Border_PreviewMouseMove"
          MouseLeftButtonUp="Border_PreviewMouseLeftButtonUp"
          MouseEnter="Pet_MouseEnter"
          MouseLeave="Pet_MouseLeave">

        <!-- Context Menu -->
        <Grid.ContextMenu>
            <ContextMenu Style="{StaticResource PetContextMenuStyle}">
                <MenuItem IsEnabled="False"
                        Style="{StaticResource PetMenuItemStyle}">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PetName}"
                                    FontWeight="Bold"
                                    FontSize="14"/>
                            <TextBlock Text="{Binding MoodEmoji}"
                                    Margin="8,0,0,0"
                                    FontSize="14"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>

                <MenuItem IsEnabled="False"
                        Style="{StaticResource PetMenuItemStyle}">
                    <MenuItem.Header>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                    Margin="0,2">
                                <TextBlock Text="â¤ï¸ Happy:"
                                        Width="70"/>
                                <ProgressBar Value="{Binding Happiness}"
                                        Maximum="100"
                                        Width="80"
                                        Height="8"
                                             Foreground="{StaticResource HappinessBar}"
                                        Background="#30FFFFFF"/>
                                <TextBlock Text="{Binding Happiness, StringFormat={}{0:0}%}"
                                        Margin="6,0,0,0"
                                        FontSize="11"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                    Margin="0,2">
                                <TextBlock Text="âš¡ Energy:"
                                        Width="70"/>
                                <ProgressBar Value="{Binding Energy}"
                                        Maximum="100"
                                        Width="80"
                                        Height="8"
                                             Foreground="{StaticResource EnergyBar}"
                                        Background="#30FFFFFF"/>
                                <TextBlock Text="{Binding Energy, StringFormat={}{0:0}%}"
                                        Margin="6,0,0,0"
                                        FontSize="11"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                    Margin="0,2">
                                <TextBlock Text="ðŸŽ Hunger:"
                                        Width="70"/>
                                <ProgressBar Value="{Binding Hunger}"
                                        Maximum="100"
                                        Width="80"
                                        Height="8"
                                             Foreground="{StaticResource HungerBar}"
                                        Background="#30FFFFFF"/>
                                <TextBlock Text="{Binding Hunger, StringFormat={}{0:0}%}"
                                        Margin="6,0,0,0"
                                        FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>

                <Separator Style="{StaticResource MenuSeparatorStyle}"/>

                <MenuItem Header="ðŸŽ Feed"
                        Style="{StaticResource PetMenuItemStyle}"
                        Click="Feed_Click"/>
                <MenuItem Header="â­ Play"
                        Style="{StaticResource PetMenuItemStyle}"
                        Click="Play_Click"/>
                <MenuItem Header="ðŸ’¤ Sleep"
                        Style="{StaticResource PetMenuItemStyle}"
                        Click="Sleep_Click"/>

                <Separator Style="{StaticResource MenuSeparatorStyle}"/>

                <MenuItem Header="ðŸ”’ Lock Position"
                        x:Name="LockWidgetMenuItem"
                        Style="{StaticResource PetMenuItemStyle}"
                          IsCheckable="True"
                        Click="LockWidget_Click"/>
                <MenuItem Header="ðŸš¶ Auto-Walk"
                        Style="{StaticResource PetMenuItemStyle}"
                          IsCheckable="True"
                        IsChecked="{Binding CanWalk}"
                        Click="ToggleWalk_Click"/>
                <MenuItem Header="âœ¨ Show Effects"
                        Style="{StaticResource PetMenuItemStyle}"
                          IsCheckable="True"
                        IsChecked="{Binding ShowParticles}"
                        Click="ToggleParticles_Click"/>

                <Separator Style="{StaticResource MenuSeparatorStyle}"/>

                <MenuItem Header="ðŸŽ¨ Pet Color"
                        Style="{StaticResource PetMenuItemStyle}">
                    <MenuItem Header="ðŸ’™ Blue"
                            Click="SetColorBlue_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                    <MenuItem Header="ðŸ’— Pink"
                            Click="SetColorPink_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                    <MenuItem Header="ðŸ’š Green"
                            Click="SetColorGreen_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                    <MenuItem Header="ðŸ’œ Purple"
                            Click="SetColorPurple_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                    <MenuItem Header="ðŸ§¡ Orange"
                            Click="SetColorOrange_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                    <MenuItem Header="ðŸ©µ Mint"
                            Click="SetColorMint_Click"
                            Style="{StaticResource PetMenuItemStyle}"/>
                </MenuItem>

                <Separator Style="{StaticResource MenuSeparatorStyle}"/>
                <MenuItem Header="âŒ Close Pet"
                        Style="{StaticResource PetMenuItemStyle}"
                        Click="RemoveWidget_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <!-- Pet Container with extra margin for particles -->
        <Canvas ClipToBounds="False"
                Margin="30">

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- PARTICLE EFFECTS - Positioned ABOVE the pet for visibility      -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

            <!-- Hearts (when being petted) - Large and visible -->
            <Canvas x:Name="HeartsCanvas"
                    Visibility="Collapsed"
                    Canvas.Left="20"
                    Canvas.Top="-40">
                <TextBlock x:Name="Heart1"
                        Text="â¤ï¸"
                        FontSize="24"
                        Canvas.Left="0"
                        Canvas.Top="0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red"
                                BlurRadius="8"
                                ShadowDepth="0"
                                Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="Heart2"
                        Text="ðŸ’•"
                        FontSize="20"
                        Canvas.Left="40"
                        Canvas.Top="10">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="HotPink"
                                BlurRadius="8"
                                ShadowDepth="0"
                                Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="Heart3"
                        Text="ðŸ’—"
                        FontSize="22"
                        Canvas.Left="80"
                        Canvas.Top="-5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Pink"
                                BlurRadius="8"
                                ShadowDepth="0"
                                Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Canvas>

            <!-- Sparkles (when playing) - Bright and glowing -->
            <Canvas x:Name="SparklesCanvas"
                    Visibility="Collapsed"
                    Canvas.Left="10"
                    Canvas.Top="-35">
                <TextBlock x:Name="Sparkle1"
                        Text="âœ¨"
                        FontSize="26"
                        Canvas.Left="0"
                        Canvas.Top="0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Gold"
                                BlurRadius="12"
                                ShadowDepth="0"
                                Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="Sparkle2"
                        Text="â­"
                        FontSize="22"
                        Canvas.Left="50"
                        Canvas.Top="15">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Yellow"
                                BlurRadius="12"
                                ShadowDepth="0"
                                Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="Sparkle3"
                        Text="âœ¨"
                        FontSize="28"
                        Canvas.Left="90"
                        Canvas.Top="-10">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Gold"
                                BlurRadius="12"
                                ShadowDepth="0"
                                Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Canvas>

            <!-- ZZZ (when sleeping) - Floating up and right -->
            <Canvas x:Name="ZzzCanvas"
                    Visibility="Collapsed"
                    Canvas.Left="80"
                    Canvas.Top="-20">
                <TextBlock x:Name="Zzz1"
                        Text="z"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#A0B0C0"
                        Canvas.Left="0"
                        Canvas.Top="30"/>
                <TextBlock x:Name="Zzz2"
                        Text="Z"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#8090A0"
                        Canvas.Left="15"
                        Canvas.Top="15"/>
                <TextBlock x:Name="Zzz3"
                        Text="Z"
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="#6080A0"
                        Canvas.Left="35"
                        Canvas.Top="-5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="LightBlue"
                                BlurRadius="6"
                                ShadowDepth="0"
                                Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Canvas>

            <!-- Food (when eating) -->
            <Canvas x:Name="FoodCanvas"
                    Visibility="Collapsed"
                    Canvas.Left="45"
                    Canvas.Top="-30">
                <TextBlock x:Name="FoodEmoji"
                        Text="ðŸŽ"
                        FontSize="28">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red"
                                BlurRadius="6"
                                ShadowDepth="2"
                                Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Canvas>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- THE PET - Adorable Blob Creature                                -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid x:Name="PetContainer"
                    Width="120"
                    Height="120"
                    Canvas.Left="0"
                    Canvas.Top="20"
                  RenderTransformOrigin="0.5,1.0">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="PetScaleTransform"
                                ScaleX="1"
                                ScaleY="1"/>
                        <TranslateTransform x:Name="PetTranslateTransform"
                                X="0"
                                Y="0"/>
                    </TransformGroup>
                </Grid.RenderTransform>

                <!-- Shadow -->
                <Ellipse Width="80"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,5"
                        Opacity="0.3">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#40000000"
                                    Offset="0"/>
                            <GradientStop Color="#00000000"
                                    Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Body -->
                <Ellipse x:Name="PetBody"
                        Width="90"
                        Height="80"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                         Margin="0,5,0,0"
                        Fill="{Binding PetBodyBrush}">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="Black"
                                BlurRadius="15"
                                ShadowDepth="3"
                                Opacity="0.4"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Body Highlight -->
                <Ellipse Width="55"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                         Margin="0,-12,0,0"
                        IsHitTestVisible="False">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0"
                                EndPoint="0,1">
                            <GradientStop Color="#50FFFFFF"
                                    Offset="0"/>
                            <GradientStop Color="#00FFFFFF"
                                    Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Face Container -->
                <Grid x:Name="FaceContainer"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,5"
                      RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <ScaleTransform x:Name="FaceFlip"
                                ScaleX="1"/>
                    </Grid.RenderTransform>

                    <!-- Left Eye -->
                    <Grid x:Name="LeftEye"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="-26,0,0,0">
                        <!-- Eye White -->
                        <Ellipse x:Name="LeftEyeWhite"
                                Width="22"
                                Height="24"
                                Fill="{StaticResource PetEyeWhite}">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black"
                                        BlurRadius="3"
                                        ShadowDepth="1"
                                        Opacity="0.2"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <!-- Pupil -->
                        <Ellipse x:Name="LeftPupil"
                                Width="12"
                                Height="14"
                                Fill="{StaticResource PetPupil}"
                                 HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        <!-- Eye Shine -->
                        <Ellipse x:Name="LeftShine"
                                Width="6"
                                Height="6"
                                Fill="White"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="4,4,0,0"/>
                        <!-- Closed Eye (for blinking/sleeping) -->
                        <Path x:Name="LeftEyeClosed"
                                Stroke="{StaticResource PetPupil}"
                                StrokeThickness="3"
                              StrokeStartLineCap="Round"
                                StrokeEndLineCap="Round"
                                Data="M -8,0 Q 0,5 8,0"
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"/>
                    </Grid>

                    <!-- Right Eye -->
                    <Grid x:Name="RightEye"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="26,0,0,0">
                        <Ellipse x:Name="RightEyeWhite"
                                Width="22"
                                Height="24"
                                Fill="{StaticResource PetEyeWhite}">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black"
                                        BlurRadius="3"
                                        ShadowDepth="1"
                                        Opacity="0.2"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <Ellipse x:Name="RightPupil"
                                Width="12"
                                Height="14"
                                Fill="{StaticResource PetPupil}"
                                 HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        <Ellipse x:Name="RightShine"
                                Width="6"
                                Height="6"
                                Fill="White"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="4,4,0,0"/>
                        <Path x:Name="RightEyeClosed"
                                Stroke="{StaticResource PetPupil}"
                                StrokeThickness="3"
                              StrokeStartLineCap="Round"
                                StrokeEndLineCap="Round"
                                Data="M -8,0 Q 0,5 8,0"
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"/>
                    </Grid>

                    <!-- Cheeks -->
                    <Ellipse Width="14"
                            Height="10"
                            Fill="{StaticResource PetCheeks}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                             Margin="-50,22,0,0"
                            Opacity="0.7"/>
                    <Ellipse Width="14"
                            Height="10"
                            Fill="{StaticResource PetCheeks}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                             Margin="50,22,0,0"
                            Opacity="0.7"/>

                    <!-- Mouth -->
                    <Path x:Name="PetMouth"
                            Stroke="{StaticResource PetPupil}"
                            StrokeThickness="2.5"
                          StrokeStartLineCap="Round"
                            StrokeEndLineCap="Round"
                            Data="M -10,0 Q 0,10 10,0"
                          HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,32,0,0"/>

                    <!-- Sad Mouth -->
                    <Path x:Name="PetMouthSad"
                            Stroke="{StaticResource PetPupil}"
                            StrokeThickness="2.5"
                          StrokeStartLineCap="Round"
                            StrokeEndLineCap="Round"
                            Data="M -8,5 Q 0,-3 8,5"
                          HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,32,0,0"
                            Visibility="Collapsed"/>

                    <!-- Eating Mouth -->
                    <Ellipse x:Name="PetMouthEating"
                            Width="16"
                            Height="14"
                            Fill="{StaticResource PetPupil}"
                             HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,32,0,0"
                            Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Canvas>

        <!-- Tooltip -->
        <Grid.ToolTip>
            <ToolTip Background="{StaticResource MenuBackground}"
                    BorderBrush="{StaticResource MenuBorder}"
                     Foreground="{StaticResource TextPrimary}"
                    Padding="10,6">
                <StackPanel>
                    <TextBlock Text="{Binding StateText}"
                            FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding AgeText}"
                            Foreground="{StaticResource TextSecondary}"
                            FontSize="11"/>
                </StackPanel>
            </ToolTip>
        </Grid.ToolTip>
    </Grid>
</local:WidgetWindowBase>
