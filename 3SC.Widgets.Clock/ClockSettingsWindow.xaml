<Window x:Class="_3SC.Widgets.Clock.ClockSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clock Widget Settings"
        Width="450"
        Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF0A0A0F"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="Surface" Color="#FF101018"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFF1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FF94A3B8"/>
        <SolidColorBrush x:Key="Accent" Color="#FF2DD4BF"/>
        <SolidColorBrush x:Key="Border" Color="#FF2A2A3A"/>
        <SolidColorBrush x:Key="SurfaceElevated" Color="#FF16161F"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Clock Widget Settings"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextPrimary}"
                   Margin="0,0,0,20"/>

        <!-- Settings Panel -->
        <Border Grid.Row="1"
                Background="{StaticResource Surface}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            
            <StackPanel>
                <!-- Time Zone Selection -->
                <TextBlock Text="Time Zone"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,8"/>
                
                <ComboBox x:Name="TimeZoneComboBox"
                          ItemsSource="{Binding AvailableTimeZones}"
                          SelectedItem="{Binding SelectedTimeZone, Mode=TwoWay}"
                          DisplayMemberPath="DisplayName"
                          Height="32"
                          Margin="0,0,0,20"
                          SelectionChanged="TimeZoneComboBox_SelectionChanged"
                          Background="{StaticResource SurfaceElevated}"
                          Foreground="{StaticResource TextPrimary}"
                          BorderBrush="{StaticResource Border}"/>

                <!-- Format Options -->
                <TextBlock Text="Format Options"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,12"/>

                <CheckBox Content="Use 24-hour format"
                          IsChecked="{Binding Use24HourFormat, Mode=TwoWay}"
                          Margin="0,0,0,12"
                          Foreground="{StaticResource TextPrimary}"
                          Checked="Format24Hour_Checked"
                          Unchecked="Format24Hour_Checked"/>

                <CheckBox Content="Show seconds"
                          IsChecked="{Binding ShowSeconds, Mode=TwoWay}"
                          Margin="0,0,0,12"
                          Foreground="{StaticResource TextPrimary}"
                          Checked="ShowSeconds_Checked"
                          Unchecked="ShowSeconds_Checked"/>

                <CheckBox Content="Show time zone label"
                          IsChecked="{Binding ShowTimeZoneLabel, Mode=TwoWay}"
                          Margin="0,0,0,20"
                          Foreground="{StaticResource TextPrimary}"
                          Checked="ShowTimeZone_Checked"
                          Unchecked="ShowTimeZone_Checked"/>

                <!-- Preview -->
                <TextBlock Text="Preview"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,12"/>

                <Border Background="{StaticResource SurfaceElevated}"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="PreviewTimeTextBlock"
                                   Text="--:--:--"
                                   FontSize="32"
                                   FontWeight="Normal"
                                   Foreground="{StaticResource TextPrimary}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="PreviewZoneTextBlock"
                                   Text=""
                                   FontSize="12"
                                   Foreground="{StaticResource Accent}"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            
            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"
                    Background="{StaticResource Surface}"
                    Foreground="{StaticResource TextPrimary}"
                    BorderBrush="{StaticResource Border}"
                    BorderThickness="1"
                    Cursor="Hand"/>

            <Button Content="Save"
                    Click="SaveButton_Click"
                    Width="100"
                    Height="36"
                    Background="{StaticResource Accent}"
                    Foreground="#FF0F172A"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
