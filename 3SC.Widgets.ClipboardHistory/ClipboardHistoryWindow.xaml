<local:WidgetWindowBase
    x:Class="_3SC.Widgets.ClipboardHistory.ClipboardHistoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_3SC.Widgets.ClipboardHistory"
    Title="Clipboard History"
    Width="350"
    Height="450"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Topmost="False">
    <local:WidgetWindowBase.Resources>
        <SolidColorBrush x:Key="WidgetSurface"
                Color="#D0080810"/>
        <SolidColorBrush x:Key="TextPrimary"
                Color="#FFF1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary"
                Color="#FF94A3B8"/>
        <SolidColorBrush x:Key="TextTertiary"
                Color="#FF64748B"/>
        <SolidColorBrush x:Key="Accent"
                Color="#FF2DD4BF"/>
        <SolidColorBrush x:Key="Border"
                Color="#FF2A2A3A"/>
        <SolidColorBrush x:Key="BorderHover"
                Color="#FF3A3A4A"/>
        <SolidColorBrush x:Key="SurfaceHover"
                Color="#FF1C1C28"/>
        <SolidColorBrush x:Key="SurfaceElevated"
                Color="#FF16161F"/>
        <SolidColorBrush x:Key="CardBackground"
                Color="#FF101018"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                    From="0"
                    To="1"
                    Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </local:WidgetWindowBase.Resources>
    <Grid Margin="6">
        <Border x:Name="RootBorder"
                CornerRadius="18"
                Background="{StaticResource WidgetSurface}"
                Cursor="Hand"
                PreviewMouseLeftButtonDown="RootBorder_PreviewMouseLeftButtonDown"
                PreviewMouseLeftButtonUp="RootBorder_PreviewMouseLeftButtonUp"
                PreviewMouseMove="RootBorder_PreviewMouseMove"
                MouseRightButtonUp="RootBorder_MouseRightButtonUp">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear All"
                            Click="ClearAll_Click"/>
                    <Separator/>
                    <MenuItem x:Name="LockWidgetMenuItem"
                            Header="Lock Widget"
                            IsCheckable="True"
                            Click="LockWidget_Click"/>
                    <MenuItem x:Name="ResizeToggleMenuItem"
                            Header="Resize Handles"
                            IsCheckable="True"
                            Click="ResizeToggle_Click"/>
                    <Separator/>
                    <MenuItem Header="Remove Widget"
                            Click="RemoveWidget_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
            <Grid>
                <Rectangle x:Name="ResizeOutline"
                        Stroke="{StaticResource Accent}"
                        StrokeThickness="2"
                        RadiusX="12"
                        RadiusY="12"
                        Visibility="Collapsed"/>
                <Thumb x:Name="ResizeTop"
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,-7,0,0"
                        Cursor="SizeNS"
                        DragDelta="ResizeTop_DragDelta"
                        Visibility="Collapsed"
                        Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource Accent}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
                <Thumb x:Name="ResizeBottom"
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,-7"
                        Cursor="SizeNS"
                        DragDelta="ResizeBottom_DragDelta"
                        Visibility="Collapsed"
                        Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource Accent}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
                <Thumb x:Name="ResizeLeft"
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="-7,0,0,0"
                        Cursor="SizeWE"
                        DragDelta="ResizeLeft_DragDelta"
                        Visibility="Collapsed"
                        Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource Accent}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
                <Thumb x:Name="ResizeRight"
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,-7,0"
                        Cursor="SizeWE"
                        DragDelta="ResizeRight_DragDelta"
                        Visibility="Collapsed"
                        Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource Accent}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                            Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                Text="Clipboard History"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource TextPrimary}"
                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <TextBlock FontSize="11"
                                    Foreground="{StaticResource TextTertiary}"><Run Text="{Binding ClipboardItems.Count, Mode=OneWay}"/><Run Text=" items"/></TextBlock>
                            <TextBlock Text="  "
                                    FontSize="11"
                                    Margin="8,0"
                                    Foreground="{StaticResource TextTertiary}"/>
                            <TextBlock FontSize="11"
                                    Foreground="{StaticResource Accent}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text"
                                                Value="Active"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMonitoring}"
                                                    Value="False">
                                                <Setter Property="Text"
                                                        Value="Paused"/>
                                                <Setter Property="Foreground"
                                                        Value="{StaticResource TextTertiary}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Row="0"
                            VerticalAlignment="Bottom"
                            Height="1"
                            Margin="0,0,0,-6"
                            Background="{StaticResource Border}"
                            Opacity="0.3"/>
                    <ScrollViewer Grid.Row="1"
                            Margin="0,6,0,0"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding ClipboardItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8"
                                            Padding="10"
                                            Background="{StaticResource CardBackground}"
                                            BorderBrush="{StaticResource Border}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Item_Click"
                                            ToolTip="Click to copy">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                            Value="True">
                                                        <Setter Property="BorderBrush"
                                                                Value="{StaticResource BorderHover}"/>
                                                        <Setter Property="Background"
                                                                Value="{StaticResource SurfaceHover}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Icon: Copy icon for text, Image thumbnail for images -->
                                            <Border Grid.Column="0"
                                                    Width="32"
                                                    Height="32"
                                                    Margin="0,0,8,0"
                                                    Background="{StaticResource SurfaceElevated}"
                                                    CornerRadius="6"
                                                    VerticalAlignment="Center">
                                                <Grid>
                                                    <!-- Text Copy Icon -->
                                                    <TextBlock Text="&#xE8C8;"
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="16"
                                                            Foreground="{StaticResource Accent}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding IsText, Converter={StaticResource BoolToVisibility}}"/>
                                                    <!-- Image Thumbnail -->
                                                    <Image Source="{Binding Image}"
                                                            Stretch="UniformToFill"
                                                            Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibility}}">
                                                        <Image.Clip>
                                                            <RectangleGeometry Rect="0,0,32,32"
                                                                    RadiusX="6"
                                                                    RadiusY="6"/>
                                                        </Image.Clip>
                                                    </Image>
                                                </Grid>
                                            </Border>
                                            <!-- Text Content -->
                                            <TextBlock Grid.Column="1"
                                                    Text="{Binding DisplayText}"
                                                    FontSize="12"
                                                    Foreground="{StaticResource TextPrimary}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap"
                                                    VerticalAlignment="Center"/>
                                            <!-- Delete Button -->
                                            <Button Grid.Column="2"
                                                    Width="28"
                                                    Height="28"
                                                    Margin="8,0,0,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="DeleteItem_Click"
                                                    ToolTip="Remove">
                                                <TextBlock Text="&#xE74D;"
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontSize="12"
                                                        Foreground="{StaticResource TextTertiary}"/>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver"
                                                                    Value="True">
                                                                <Setter Property="Background"
                                                                        Value="{StaticResource SurfaceElevated}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</local:WidgetWindowBase>
