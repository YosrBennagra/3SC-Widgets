<Window x:Class="_3SC.Widgets.ApiStatus.ApiStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_3SC.Widgets.ApiStatus"
        Title="API Status Monitor"
        Width="500"
        Height="650"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush"
                Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BorderBrush"
                Color="#3F3F46"/>
        <SolidColorBrush x:Key="HeaderBrush"
                Color="#2D2D30"/>
        <SolidColorBrush x:Key="ForegroundBrush"
                Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush"
                Color="#0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush"
                Color="#2A2A2A"/>
        <SolidColorBrush x:Key="SuccessBrush"
                Color="#10B981"/>
        <SolidColorBrush x:Key="ErrorBrush"
                Color="#EF4444"/>
        <SolidColorBrush x:Key="HoverBrush"
                Color="#3E3E42"/>

        <!-- Status Indicator Style -->
        <Style x:Key="StatusIndicator"
                TargetType="Ellipse">
            <Setter Property="Width"
                    Value="12"/>
            <Setter Property="Height"
                    Value="12"/>
            <Setter Property="Fill"
                    Value="{StaticResource ErrorBrush}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOnline}"
                        Value="True">
                    <Setter Property="Fill"
                            Value="{StaticResource SuccessBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ApiButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Converters -->
        <local:ResponseTimeGraphConverter x:Key="GraphConverter"/>
        <local:EmptyVisibilityConverter x:Key="EmptyVisibilityConverter"/>
        <local:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="ðŸŸ¢ API Status Monitor"
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="12,0"/>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                        <Button Content="âš™ï¸"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                Foreground="{StaticResource ForegroundBrush}"
                                BorderThickness="0"
                                FontSize="16"
                                Click="Settings_Click"
                                ToolTip="Settings"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource HoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•"
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                Foreground="{StaticResource ForegroundBrush}"
                                BorderThickness="0"
                                FontSize="16"
                                Click="Close_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                Value="True">
                                            <Setter Property="Background"
                                                    Value="#E81123"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1"
                    Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Controls -->
                <Grid Grid.Row="0"
                        Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="12">
                        <Run Text="Last check: "/>
                        <Run Text="{Binding LastCheckTime}"
                                FontWeight="SemiBold"/>
                    </TextBlock>

                    <Button Grid.Column="1"
                            Content="+ Add API"
                            Command="{Binding AddEndpointCommand}"
                            Style="{StaticResource ApiButton}"
                            Margin="0,0,8,0"/>

                    <Button Grid.Column="2"
                            Content="ðŸ”„ Check Now"
                            Command="{Binding CheckNowCommand}"
                            Style="{StaticResource ApiButton}"/>
                </Grid>

                <!-- API List -->
                <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Endpoints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SecondaryBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,12"
                                        MouseLeftButtonDown="Endpoint_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                        Value="True">
                                                    <Setter Property="Background"
                                                            Value="{StaticResource HoverBrush}"/>
                                                    <Setter Property="Cursor"
                                                            Value="Hand"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0"
                                                     Style="{StaticResource StatusIndicator}"
                                                     Margin="0,0,8,0"/>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Name}"
                                                       Foreground="{StaticResource ForegroundBrush}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal">
                                                <TextBlock Text="{Binding UptimePercentage, StringFormat={}{0:F1}%}"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,12,0"/>
                                                <Button Content="âœ•"
                                                        Command="{Binding DataContext.RemoveEndpointCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource ForegroundBrush}"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Padding="6,2"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background"
                                                                    Value="Transparent"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="3"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                        Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="{StaticResource ErrorBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <!-- URL -->
                                        <TextBox Grid.Row="1"
                                                 Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                                 Foreground="#999999"
                                                 FontSize="11"
                                                 FontFamily="Consolas"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Margin="20,4,0,4"
                                                 TextChanged="Url_Changed"/>

                                        <!-- Status & Response Time -->
                                        <Grid Grid.Row="2"
                                                Margin="20,4,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding StatusMessage}"
                                                       Foreground="{StaticResource ForegroundBrush}"
                                                       FontSize="11"
                                                       FontFamily="Consolas"/>

                                            <TextBlock Grid.Column="1"
                                                       Foreground="#999999"
                                                       FontSize="11">
                                                <Run Text="Avg: "/>
                                                <Run Text="{Binding ResponseTime, StringFormat={}{0:F0}ms, Mode=OneWay}"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Response Time Graph -->
                                        <Border Grid.Row="3"
                                                Height="60"
                                                Background="#1A1A1A"
                                                CornerRadius="4"
                                                Margin="20,0,0,0">
                                            <Canvas x:Name="GraphCanvas"
                                                    Margin="4">
                                                <Polyline Points="{Binding ResponseHistory, Converter={StaticResource GraphConverter}, ConverterParameter=GraphCanvas}"
                                                          Stroke="{StaticResource AccentBrush}"
                                                          StrokeThickness="2"
                                                          StrokeLineJoin="Round"/>
                                            </Canvas>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding Endpoints.Count, Converter={StaticResource EmptyVisibilityConverter}}">
                    <TextBlock Text="ðŸ“¡"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="No APIs configured"
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Click 'Add API' to start monitoring"
                               Foreground="#999999"
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Status Bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource SecondaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center">
                            <Run Text="Check interval: "/>
                            <Run Text="{Binding CheckInterval}"
                                    FontWeight="SemiBold"/>
                            <Run Text="s"/>
                        </TextBlock>

                        <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                            <TextBlock Text="ðŸ”” Alerts: "
                                       Foreground="{StaticResource ForegroundBrush}"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding AlertOnDowntime, Converter={StaticResource BoolToOnOffConverter}}"
                                       Foreground="{StaticResource SuccessBrush}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Resize Grip -->
            <Grid Grid.Row="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">
                <Path Data="M 0,10 L 10,10 L 10,0"
                      Stroke="{StaticResource BorderBrush}"
                      StrokeThickness="1"
                      Margin="0,0,4,4"
                      Cursor="SizeNWSE"
                      MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown"/>
            </Grid>
        </Grid>
    </Border>
</Window>
