<local:WidgetWindowBase
    x:Class="_3SC.Widgets.AmbientSounds.AmbientSoundsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_3SC.Widgets.AmbientSounds"
    Title="Ambient Sounds"
    Width="260"
    Height="320"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    ResizeMode="CanResizeWithGrip">

    <local:WidgetWindowBase.Resources>
        <SolidColorBrush x:Key="TextPrimary"
                Color="#FFF1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary"
                Color="#FF94A3B8"/>
        <SolidColorBrush x:Key="BorderColor"
                Color="#40FFFFFF"/>
        <SolidColorBrush x:Key="ButtonHover"
                Color="#30FFFFFF"/>
    </local:WidgetWindowBase.Resources>

    <Border Background="{Binding BackgroundBrush}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="16"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                    BlurRadius="24"
                    ShadowDepth="0"
                    Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with animated icon -->
            <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,12">
                <TextBlock Text="{Binding CurrentIcon}"
                        FontSize="40"
                        HorizontalAlignment="Center"
                           Opacity="{Binding AnimationOpacity}">
                    <TextBlock.RenderTransform>
                        <TranslateTransform Y="{Binding Particle1Y}"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock Text="{Binding StatusText}"
                        FontSize="12"
                           Foreground="{StaticResource TextSecondary}"
                           HorizontalAlignment="Center"
                        Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Play/Pause Button -->
            <Button Grid.Row="1"
                    Width="60"
                    Height="60"
                    Margin="0,0,0,12"
                    Command="{Binding TogglePlayCommand}"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg"
                                Background="#20FFFFFF"
                                CornerRadius="30"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="2">
                            <TextBlock Text="{Binding IsPlaying, Converter={local:BoolToPlayPauseConverter}}"
                                       FontSize="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                       Foreground="{StaticResource TextPrimary}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter TargetName="Bg"
                                        Property="Background"
                                        Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Sound Presets Grid -->
            <ScrollViewer Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,12">
                <ItemsControl ItemsSource="{Binding Presets}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="68"
                                    Height="68"
                                    Margin="4"
                                    Command="{Binding DataContext.SelectPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg"
                                                Background="#15FFFFFF"
                                                CornerRadius="12"
                                                BorderThickness="2"
                                                Padding="4">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="Transparent"/>
                                            </Border.BorderBrush>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Icon}"
                                                        FontSize="24"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}"
                                                        FontSize="9"
                                                           Foreground="#94A3B8"
                                                           HorizontalAlignment="Center"
                                                        Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                <Setter TargetName="Bg"
                                                        Property="Background"
                                                        Value="#25FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Volume Slider -->
            <Grid Grid.Row="3"
                    Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                        Text="ðŸ”ˆ"
                        FontSize="14"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"/>

                <Slider Grid.Column="1"
                        Minimum="0"
                        Maximum="1"
                        Value="{Binding Volume, Mode=TwoWay}"
                        VerticalAlignment="Center">
                    <Slider.Template>
                        <ControlTemplate TargetType="Slider">
                            <Grid>
                                <Border Height="4"
                                        Background="#30FFFFFF"
                                        CornerRadius="2"/>
                                <Border Height="4"
                                        Background="#80FFFFFF"
                                        CornerRadius="2"
                                        HorizontalAlignment="Left"
                                        Width="{Binding Volume, Converter={local:PercentToWidthConverter}, ConverterParameter=180}"/>
                                <Track x:Name="PART_Track">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Width="16"
                                                            Height="16"
                                                            Fill="White"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Slider.Template>
                </Slider>

                <TextBlock Grid.Column="2"
                        Text="ðŸ”Š"
                        FontSize="14"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0"/>
            </Grid>

            <!-- Title -->
            <TextBlock Grid.Row="4"
                    Text="Ambient Sounds"
                    FontSize="10"
                       Foreground="{StaticResource TextSecondary}"
                       HorizontalAlignment="Center"
                    Opacity="0.6"/>
        </Grid>
    </Border>
</local:WidgetWindowBase>
