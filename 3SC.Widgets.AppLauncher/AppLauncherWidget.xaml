<local:WidgetWindowBase x:Class="_3SC.Widgets.AppLauncher.AppLauncherWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:_3SC.Widgets.AppLauncher"
                        Title="App Launcher"
                        Width="420"
                        Height="340"
                        WindowStyle="None"
                        AllowsTransparency="True"
                        Background="Transparent"
                        ShowInTaskbar="False"
                        Topmost="False"
                        ResizeMode="NoResize"
                        AllowDrop="True"
                        Drop="Widget_Drop"
                        DragOver="Widget_DragOver">

    <local:WidgetWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- 3SC Dark Theme Colors -->
        <SolidColorBrush x:Key="WidgetSurface"
                Color="#D0080810"/>
        <SolidColorBrush x:Key="WidgetOutline"
                Color="#FF2DD4BF"/>
        <SolidColorBrush x:Key="Accent"
                Color="#FF2DD4BF"/>
        <SolidColorBrush x:Key="AccentHover"
                Color="#FF34E5CE"/>
        <SolidColorBrush x:Key="CardBorder"
                Color="#FF2A2A3A"/>
        <SolidColorBrush x:Key="Card"
                Color="#FF0F172A"/>
        <SolidColorBrush x:Key="TextPrimary"
                Color="#FFF1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary"
                Color="#FF94A3B8"/>
        <SolidColorBrush x:Key="TextTertiary"
                Color="#FF64748B"/>
    </local:WidgetWindowBase.Resources>

    <Grid Margin="6">
        <Border x:Name="RootBorder"
                Background="{StaticResource WidgetSurface}"
                CornerRadius="18"
                SnapsToDevicePixels="True"
                PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                PreviewMouseMove="Border_PreviewMouseMove"
                PreviewMouseLeftButtonUp="Border_PreviewMouseLeftButtonUp">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add App"
                              Click="AddApp_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE710;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem x:Name="LockWidgetMenuItem"
                              Header="Lock Widget"
                              IsCheckable="True"
                              Click="LockWidget_Click"/>
                    <MenuItem x:Name="ResizeToggleMenuItem"
                              Header="Resize Handles"
                              IsCheckable="True"
                              Click="ResizeToggle_Click"/>
                    <Separator/>
                    <MenuItem Header="Remove Widget"
                              Click="RemoveWidget_Click"/>
                </ContextMenu>
            </Border.ContextMenu>

            <Grid>

                <!-- Resize outline -->
                <Rectangle x:Name="ResizeOutline"
                           Stroke="{StaticResource WidgetOutline}"
                           StrokeThickness="2"
                           RadiusX="12"
                           RadiusY="12"
                           Visibility="Collapsed"/>

                <!-- Resize handles -->
                <Thumb x:Name="ResizeTop"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Cursor="SizeNS"
                       DragDelta="ResizeTop_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,-7,0,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeBottom"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Cursor="SizeNS"
                       DragDelta="ResizeBottom_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,0,0,-7"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeLeft"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Cursor="SizeWE"
                       DragDelta="ResizeLeft_DragDelta"
                       Visibility="Collapsed"
                       Margin="-7,0,0,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeRight"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Cursor="SizeWE"
                       DragDelta="ResizeRight_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,0,-7,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{StaticResource WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <!-- Main layout -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Thin header with tabs -->
                    <Border Grid.Row="0"
                            Background="Transparent"
                            Padding="20,6">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Selection indicator -->
                            <Border x:Name="SelectionIndicator"
                                    Grid.Column="0"
                                    Background="{StaticResource Accent}"
                                    CornerRadius="6"
                                    Opacity="0.2"
                                    Panel.ZIndex="0"/>

                            <!-- All Button -->
                            <Button x:Name="AllTabButton"
                                    Grid.Column="0"
                                    Click="AllTab_Click"
                                    Cursor="Hand"
                                    Width="32"
                                    Height="24">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE71D;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Favorites Button -->
                            <Button x:Name="FavoritesTabButton"
                                    Grid.Column="1"
                                    Click="FavoritesTab_Click"
                                    Cursor="Hand"
                                    Width="32"
                                    Height="24">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE735;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Divider -->
                    <Border Grid.Row="0"
                            VerticalAlignment="Bottom"
                            Height="1"
                            Margin="20,0"
                            Background="{StaticResource CardBorder}"
                            Opacity="0.25"/>

                    <!-- CONTENT -->
                    <Grid Grid.Row="1"
                          Margin="14,8,14,0">

                        <!-- Empty state -->
                        <StackPanel x:Name="EmptyState"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                            <Border Background="{StaticResource Card}"
                                    CornerRadius="12"
                                    Padding="16"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="AddAppIcon_Click"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="&#xE710;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="28"
                                           Foreground="{StaticResource TextTertiary}"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Drop apps here"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondary}"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>

                            <TextBlock Text="or click the icon above"
                                       FontSize="11"
                                       Foreground="{StaticResource TextTertiary}"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- App grid -->
                        <ScrollViewer x:Name="AppScrollViewer"
                                      Visibility="Collapsed"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">

                            <ItemsControl x:Name="AppItemsControl"
                                          ItemsSource="{Binding Apps}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="76"
                                                Height="84"
                                                Margin="6"
                                                CornerRadius="12"
                                                Cursor="Hand"
                                                Background="#08FFFFFF"
                                                PreviewMouseLeftButtonDown="AppItem_Click"
                                                ToolTip="{Binding Name}">

                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Launch"
                                                              Click="LaunchApp_Click"/>
                                                    <Separator/>
                                                    <MenuItem Header="Toggle Favorite"
                                                              Click="ToggleFavorite_Click"/>
                                                    <MenuItem Header="Remove"
                                                              Click="RemoveApp_Click"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>

                                            <Grid>
                                                <!-- Favorite star badge -->
                                                <Border HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="0,-2,-2,0"
                                                        Background="#FFFFC107"
                                                        CornerRadius="10"
                                                        Width="20"
                                                        Height="20"
                                                        Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="&#xE735;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- App icon and name -->
                                                <StackPanel VerticalAlignment="Center"
                                                            HorizontalAlignment="Center">
                                                    <Image Source="{Binding Icon}"
                                                           Width="32"
                                                           Height="32"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,6"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="10"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="70"
                                                               Foreground="{StaticResource TextPrimary}"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</local:WidgetWindowBase>
