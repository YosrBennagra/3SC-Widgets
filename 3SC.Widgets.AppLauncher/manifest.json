{
    "packageId": "com.3sc.applauncher",
    "widgetKey": "app-launcher",
    "displayName": "App Launcher",
    "version": "1.2.0",
    "author": {
        "name": "3SC Team",
        "email": "team@3sc.app",
        "url": "https://3sc.app"
    },
    "description": "Quick access launcher for your favorite applications with drag-and-drop support.",
    "category": "productivity",
    "icon": "Assets/icon.png",
    "entry": "3SC.Widgets.AppLauncher.dll",
    "minAppVersion": "1.0.0",
    "hasSettings": false,
    "hasOwnWindow": true,
    "permissions": [
        "filesystem",
        "process"
    ],
    "tags": [
        "apps",
        "launcher",
        "quick-access",
        "productivity",
        "shortcuts"
    ],
    "defaultSize": {
        "width": 420,
        "height": 340
    },
    "preview": {
        "static": "Assets/preview.png",
        "animated": "Assets/preview.gif",
        "screenshots": [
            "Assets/screenshots/main.png",
            "Assets/screenshots/drag-drop.png"
        ]
    },
    "distribution": {
        "category": "Productivity",
        "tags": [
            "apps",
            "launcher",
            "shortcuts",
            "productivity"
        ],
        "listing": {
            "shortDescription": "Quick access launcher for your favorite applications",
            "changelog": "CHANGELOG.md"
        }
    }
