<Window x:Class="_3SC.Widgets.GameVault.GameVaultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Vault"
        Width="420"
        Height="340"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="NoResize"
        AllowDrop="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="6">
        <Border x:Name="RootBorder"
                Background="#D0080810"
                CornerRadius="18"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with tabs -->
                <Border Grid.Row="0"
                        Background="Transparent"
                        Padding="20,6">
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="SelectionIndicator"
                                Grid.Column="0"
                                Background="#2DD4BF"
                                CornerRadius="6"
                                Opacity="0.2"
                                Panel.ZIndex="0"/>





















































</Window>
</Grid>
</Border>
</Grid>
</Grid>
</ScrollViewer>
</ItemsControl>
</ItemsControl.ItemTemplate>
</DataTemplate>
</Border>
</Grid>
</StackPanel>
<TextBlock Text="{Binding Name}"
        FontSize="10"
        MaxWidth="70"
        TextAlignment="Center"
        TextTrimming="CharacterEllipsis"
        Foreground="#C7D2FE"/>
<Image Width="42"
        Height="42"
        Source="{Binding Icon}"
        RenderOptions.BitmapScalingMode="HighQuality"/>
<StackPanel HorizontalAlignment="Center"
        VerticalAlignment="Center">
    </Border>
    <TextBlock Text=""
            FontFamily="Segoe MDL2 Assets"
            FontSize="10"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    <Border HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,-2,-2,0"
            Background="#FFFFC107"
            CornerRadius="10"
            Width="20"
            Height="20"
            Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibility}}">
        <Grid>
            <Border Width="76"
                    Height="84"
                    Margin="6"
                    CornerRadius="12"
                    Cursor="Hand"
                    Background="#08FFFFFF"
                    ToolTip="{Binding Name}">
                <DataTemplate>
                    <ItemsControl.ItemTemplate>
                        </ItemsControl.ItemsPanel>
                        </ItemsPanelTemplate>
                        <WrapPanel/>
                        <ItemsPanelTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsControl x:Name="AppItemsControl">
                                    <ScrollViewer x:Name="AppScrollViewer"
                                            Visibility="Collapsed"
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Disabled">
</StackPanel>
<TextBlock Text="or click the icon above"
        FontSize="11"
        Foreground="#94A3B8"
        Margin="0,4,0,0"
        HorizontalAlignment="Center"/>
<TextBlock Text="Drop apps here"
        FontSize="13"
        FontWeight="SemiBold"
        Foreground="#C7D2FE"
        HorizontalAlignment="Center"
        Margin="0,12,0,0"/>
</Border>
<TextBlock Text=""
        FontFamily="Segoe MDL2 Assets"
        FontSize="28"
        Foreground="#94A3B8"
        HorizontalAlignment="Center"/>
<Border Background="#0B1220"
        CornerRadius="12"
        Padding="16"
        Cursor="Hand"
        HorizontalAlignment="Center">
    <StackPanel x:Name="EmptyState"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <Grid Grid.Row="1"
                Margin="14,8,14,0">
            <!-- Content -->
            <Border Grid.Row="0"
                    VerticalAlignment="Bottom"
                    Height="1"
                    Margin="20,0"
                    Background="#FF1E293B"
                    Opacity="0.25"/>
            <!-- Divider -->
</Border>
</Grid>
