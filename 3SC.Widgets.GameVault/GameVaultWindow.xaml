        FontFamily="Segoe MDL2 Assets"
        FontSize="14"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"/>
<Button x:Name="FavoritesTabButton"
        Grid.Column="1"
        Width="32"
        Height="24"
        Cursor="Hand"
        Click="FavoritesTab_Click"></Button>
