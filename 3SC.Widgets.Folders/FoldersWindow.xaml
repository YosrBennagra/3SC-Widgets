<local:WidgetWindowBase x:Class="_3SC.Widgets.Folders.FoldersWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:_3SC.Widgets.Folders"
                        Title="Folder Hub"
                        Width="420"
                        Height="340"
                        WindowStyle="None"
                        AllowsTransparency="True"
                        Background="Transparent"
                        ShowInTaskbar="False"
                        Topmost="False"
                        ResizeMode="NoResize"
                        AllowDrop="True"
                        Drop="Widget_Drop"
                        DragOver="Widget_DragOver">

    <local:WidgetWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Local fallback brushes to preserve widget styling when host resources are missing -->
        <SolidColorBrush x:Key="Brushes.WidgetSurface"
                Color="#FF1E1F22"/>
        <SolidColorBrush x:Key="Brushes.WidgetOutline"
                Color="#FF3A3A3A"/>
        <SolidColorBrush x:Key="Brushes.Accent"
                Color="#FF0A84FF"/>
        <SolidColorBrush x:Key="Brushes.CardBorder"
                Color="#66FFFFFF"/>
        <SolidColorBrush x:Key="Brushes.Card"
                Color="#FF2A2B2E"/>
        <SolidColorBrush x:Key="Brushes.TextPrimary"
                Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Brushes.TextSecondary"
                Color="#FFB3B3B3"/>
        <SolidColorBrush x:Key="Brushes.TextTertiary"
                Color="#FF8A8A8A"/>
    </local:WidgetWindowBase.Resources>

    <Grid Margin="6">
        <Border x:Name="RootBorder"
                Background="{DynamicResource Brushes.WidgetSurface}"
                CornerRadius="18"
                SnapsToDevicePixels="True"
                PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                PreviewMouseMove="Border_PreviewMouseMove"
                PreviewMouseLeftButtonUp="Border_PreviewMouseLeftButtonUp">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add Folder"
                              Click="AddFolder_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8F4;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem x:Name="LockWidgetMenuItem"
                              Header="Lock Widget"
                              IsCheckable="True"
                              Click="LockWidget_Click"/>
                    <MenuItem x:Name="ResizeToggleMenuItem"
                              Header="Resize Handles"
                              IsCheckable="True"
                              Click="ResizeToggle_Click"/>
                    <Separator/>
                    <MenuItem Header="Remove Widget"
                              Click="RemoveWidget_Click"/>
                </ContextMenu>
            </Border.ContextMenu>

            <Grid>

                <!-- Resize outline -->
                <Rectangle x:Name="ResizeOutline"
                           Stroke="{DynamicResource Brushes.WidgetOutline}"
                           StrokeThickness="2"
                           RadiusX="12"
                           RadiusY="12"
                           Visibility="Collapsed"/>

                <!-- Resize handles -->
                <Thumb x:Name="ResizeTop"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Cursor="SizeNS"
                       DragDelta="ResizeTop_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,-7,0,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{DynamicResource Brushes.WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeBottom"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Cursor="SizeNS"
                       DragDelta="ResizeBottom_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,0,0,-7"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{DynamicResource Brushes.WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeLeft"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Cursor="SizeWE"
                       DragDelta="ResizeLeft_DragDelta"
                       Visibility="Collapsed"
                       Margin="-7,0,0,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{DynamicResource Brushes.WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="ResizeRight"
                       Width="14"
                       Height="14"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Cursor="SizeWE"
                       DragDelta="ResizeRight_DragDelta"
                       Visibility="Collapsed"
                       Margin="0,0,-7,0"
                       Panel.ZIndex="10">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="{DynamicResource Brushes.WidgetOutline}"
                                    CornerRadius="7"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <!-- Main layout -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Thin header with tabs -->
                    <Border Grid.Row="0"
                            Background="Transparent"
                            Padding="20,6">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Selection indicator -->
                            <Border x:Name="SelectionIndicator"
                                    Grid.Column="0"
                                    Background="{DynamicResource Brushes.Accent}"
                                    CornerRadius="6"
                                    Opacity="0.2"
                                    Panel.ZIndex="0"/>

                            <!-- All Button -->
                            <Button x:Name="AllTabButton"
                                    Grid.Column="0"
                                    Click="AllTab_Click"
                                    Cursor="Hand"
                                    Width="32"
                                    Height="24">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE8F4;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Favorites Button -->
                            <Button x:Name="FavoritesTabButton"
                                    Grid.Column="1"
                                    Click="FavoritesTab_Click"
                                    Cursor="Hand"
                                    Width="32"
                                    Height="24">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE735;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Divider -->
                    <Border Grid.Row="0"
                            VerticalAlignment="Bottom"
                            Height="1"
                            Margin="20,0"
                            Background="{DynamicResource Brushes.CardBorder}"
                            Opacity="0.25"/>

                    <!-- CONTENT -->
                    <Grid Grid.Row="1"
                          Margin="14,8,14,0">

                        <!-- Empty state -->
                        <StackPanel x:Name="EmptyState"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                            <Border Background="{DynamicResource Brushes.Card}"
                                    CornerRadius="12"
                                    Padding="16"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="AddFolderIcon_Click"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="&#xE8F4;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="28"
                                           Foreground="{DynamicResource Brushes.TextTertiary}"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Drop folders here"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brushes.TextSecondary}"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>

                            <TextBlock Text="or click the icon above"
                                       FontSize="11"
                                       Foreground="{DynamicResource Brushes.TextTertiary}"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Folder grid -->
                        <ScrollViewer x:Name="FolderScrollViewer"
                                      Visibility="Collapsed"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">

                            <ItemsControl x:Name="FolderItemsControl"
                                          ItemsSource="{Binding Folders}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="76"
                                                Height="84"
                                                Margin="6"
                                                CornerRadius="12"
                                                Cursor="Hand"
                                                Background="#08FFFFFF"
                                                PreviewMouseLeftButtonDown="FolderItem_Click"
                                                ToolTip="{Binding Name}">

                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Open"
                                                              Click="OpenFolder_Click"/>
                                                    <Separator/>
                                                    <MenuItem Header="Toggle Favorite"
                                                              Click="ToggleFavorite_Click"/>
                                                    <MenuItem Header="Remove"
                                                              Click="RemoveFolder_Click"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>

                                            <Grid>
                                                <!-- Favorite star badge -->
                                                <Border HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="0,-2,-2,0"
                                                        Background="#FFFFC107"
                                                        CornerRadius="10"
                                                        Width="20"
                                                        Height="20"
                                                        Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="&#xE735;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Folder icon and name -->
                                                <StackPanel VerticalAlignment="Center"
                                                            HorizontalAlignment="Center">
                                                    <TextBlock Text="&#xE8B7;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="32"
                                                               Foreground="{DynamicResource Brushes.Accent}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,6"/>

                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="10"
                                                               TextAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="70"
                                                               Foreground="{DynamicResource Brushes.TextPrimary}"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</local:WidgetWindowBase>
