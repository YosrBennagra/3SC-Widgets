<local:WidgetWindowBase x:Class="_3SC.Widgets.ThisDayInHistory.ThisDayInHistoryWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:_3SC.Widgets.ThisDayInHistory"
                        xmlns:converters="clr-namespace:_3SC.Widgets.ThisDayInHistory.Converters"
                        Title="This Day in History"
                        Width="400"
        Height="550"
                        WindowStyle="None"
                        AllowsTransparency="True"
                        Background="Transparent"
                        ResizeMode="CanResize"
                        Topmost="True">

    <Window.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Clean Modern Theme (Clock/Notes style) -->
        <SolidColorBrush x:Key="WindowBackground"
                Color="#F5F5F5"/>
        <SolidColorBrush x:Key="HeaderBackground"
                Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBackground"
                Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush"
                Color="#E0E0E0"/>
        <SolidColorBrush x:Key="PrimaryText"
                Color="#212121"/>
        <SolidColorBrush x:Key="SecondaryText"
                Color="#757575"/>
        <SolidColorBrush x:Key="AccentColor"
                Color="#2196F3"/>
        <SolidColorBrush x:Key="HoverBackground"
                Color="#F5F5F5"/>

        <!-- Button Style -->
        <Style x:Key="IconButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource HoverBackground}"/>
                    <Setter Property="Foreground"
                            Value="{StaticResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="4,2"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontSize"
                    Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       TextDecorations="Underline"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Foreground"
                            Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource WindowBackground}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ðŸ“œ This Day in History"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryText}"/>
                        <TextBlock Text="{Binding TodayDate}"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryText}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="ðŸ”„"
                            Style="{StaticResource IconButton}"
                            Command="{Binding RefreshEventsCommand}"
                            ToolTip="Refresh Events"/>
                </Grid>
            </Border>

            <!-- Events List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="12,8">
                <ItemsControl ItemsSource="{Binding Events}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Year and Category -->
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            Margin="0,0,0,6">
                                        <TextBlock Text="{Binding CategoryEmoji}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding YearDisplay}"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource AccentColor}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Description}"
                                               FontSize="12"
                                               Foreground="{StaticResource PrimaryText}"
                                               TextWrapping="Wrap"
                                               LineHeight="18"
                                               Margin="0,0,0,8"/>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="2"
                                            Orientation="Horizontal">
                                        <Button Content="ðŸ”— Wikipedia"
                                                Style="{StaticResource LinkButton}"
                                                Command="{Binding DataContext.OpenWikipediaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Visibility="{Binding WikipediaUrl, Converter={StaticResource StringToVisibilityConverter}}"
                                                Margin="0,0,8,0"/>

                                        <Button Content="ðŸ“¤ Share"
                                                Style="{StaticResource LinkButton}"
                                                Command="{Binding DataContext.ShareEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource HeaderBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,8"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding EventCount}"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="ðŸ“‹ Copy All"
                            Style="{StaticResource LinkButton}"
                            Command="{Binding CopyAllEventsCommand}"
                            FontSize="11"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</local:WidgetWindowBase>
